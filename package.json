{
  "name": "electron-transparent-blur",
  "version": "1.0.0",
  "description": "WANKR",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build:mac": "electron-builder --mac --config.mac.target=dir",
    "build:win": "electron-builder --win --config.win.target=portable",
    "build:linux": "electron-builder --linux --config.linux.target=AppImage",
    "build:all": "npm run build:mac && npm run build:win && npm run build:linux"
  },
  "keywords": [
    "electron",
    "transparent",
    "blur",
    "boilerplate"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.example.electron-transparent-blur",
    "productName": "Electron Transparent Blur",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
