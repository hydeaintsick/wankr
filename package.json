{
  "name": "wankr",
  "version": "1.0.13",
  "description": "WANKR - Everyday is a holiday",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npx electron-builder",
    "dist": "npx electron-builder --publish=never",
    "build:mac": "npx electron-builder --mac --config.mac.target=dir",
    "build:win": "npx electron-builder --win --config.win.target=portable",
    "build:win-msix": "npx electron-builder --win --config.win.target=msix",
    "build:linux": "npx electron-builder --linux --config.linux.target=AppImage",
    "build:all": "npm run build:mac && npm run build:win && npm run build:linux",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "build:win-msix-bump": "npm run version:patch && npm run build:win-msix",
    "build:win-bump": "npm run version:patch && npm run build:win",
    "build:mac-bump": "npm run version:patch && npm run build:mac",
    "build:linux-bump": "npm run version:patch && npm run build:linux",
    "build:all-bump": "npm run version:patch && npm run build:all",
    "build:smart": "node build.js",
    "build:win-msix-smart": "node build.js win-msix",
    "build:win-smart": "node build.js win",
    "build:mac-smart": "node build.js mac",
    "build:linux-smart": "node build.js linux",
    "build:all-smart": "node build.js all",
    "build:cross": "node build.js cross",
    "build:cross-smart": "node build.js cross",
    "build:msix": "node build-msix.js",
    "build:msix-smart": "node build-msix.js",
    "version-bump": "node build.js version"
  },
  "keywords": [
    "electron",
    "transparent",
    "blur",
    "boilerplate"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.wankr",
    "productName": "wankr",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*",
      "appxmanifest.xml"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
